<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <TextView
        android:id="@+id/textview_quest"
        android:layout_width="644dp"
        android:layout_height="wrap_content"
        android:text="@string/l_esen_ret1_1"
        android:textAlignment="textEnd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/resp_cumple"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/textview_quest"
        app:layout_constraintStart_toEndOf="@+id/textview_quest" />
</androidx.constraintlayout.widget.ConstraintLayout>
